{
  "name": "@quazardous/sailing",
  "version": "1.17.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "cli"
  ],
  "description": "Project governance CLI for sailing workflow - PRD/Epic/Task management",
  "bin": {
    "rudder": "./bin/rudder",
    "rdrctl": "./mcp/agent-server.js"
  },
  "scripts": {
    "rudder": "node dist/cli/rudder.js",
    "mcp": "node mcp/agent-server.js",
    "build": "npm run --workspace cli build",
    "build-dist": "npm run build && ./publish-dist.sh --push",
    "dev": "npm run --workspace cli dev",
    "lint": "npm run --workspace cli lint",
    "build:skill": "./skill/build.sh",
    "test": "npm run build && node --test test/*.test.js",
    "test:watch": "npm run build && node --test --watch test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quazardous/sailing.git"
  },
  "keywords": [
    "project-management",
    "prd",
    "epic",
    "task",
    "governance",
    "claude",
    "ai-agent"
  ],
  "author": "quazardous",
  "license": "MIT",
  "dependencies": {
    "execa": "^9.6.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/nunjucks": "^3.2.6",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "typescript-eslint": "^8.53.0"
  }
}
