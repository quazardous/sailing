# Sailing configuration
#
# Path prefixes:
#   ./  → relative to project root (default)
#   /   → absolute path
#   ~/  → user home directory
#   ^/  → sailing maintenance repo (devinstall mode only)
#
# Examples:
#   artefacts: .sailing/artefacts     # relative to project
#   artefacts: /var/data/sailing      # absolute path
#   prompting: ~/shared/sailing/prompting  # in home directory
#   prompting: ^/prompting            # sailing repo (devinstall)

paths:
  # Sailing data
  artefacts: .sailing/artefacts
  memory: .sailing/memory
  templates: .sailing/templates
  prompting: .sailing/prompting
  rudder: .sailing/rudder

  # State files
  state: .sailing/state.json
  components: .sailing/components.yaml

  # Claude integration (must be under .claude/)
  skill: .claude/skills/sailing
  commands: .claude/commands/dev

  # Project-centric files (auto-injected into context)
  # Agent context (use_subprocess=true): toolset, stack
  # Skill context (main thread): roadmap, postit
  toolset: .claude/TOOLSET.md      # Build/test commands (subprocess mode)
  stack: STACK.md                   # Tech stack (subprocess mode)
  roadmap: .sailing/artefacts/ROADMAP.md  # Vision docs (skill only)
  postit: .sailing/artefacts/POSTIT.md    # Backlog (skill only)
